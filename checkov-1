pipeline {
  agent {
    docker {bridgecrew/checkov:2.3.165}
  }
  stages {
    stage('verify version') {
      steps {
        container('checkov') {
          sh 'checkov --version'
        }
      }
    }
    stage('check the help') {
      steps {
        container('checkov') {
          sh 'checkov --help'
        }
      }
    }
  }
}
